<body>
<div class="box">
<h2>üîê PAULO.XT</h2>

<input type="password" id="senha" placeholder="Senha Admin">

<select id="dias">
    <option value="1">1 Dia</option>
    <option value="7">7 Dias</option>
    <option value="30">30 Dias</option>
    <option value="9999">Permanente</option>
</select>

<button onclick="gerar()">GERAR KEY</button>

<div class="result" id="out"></div>
</div>

<script>
// üîë ALTERE SOMENTE A SENHA
const SENHA_ADMIN = "paulo123";

// üîí TOKEN SECRETO (liga site + script)
const SECRET = "PAULO_XT_2026";

// üì± ID √öNICO DO DISPOSITIVO
function deviceID() {
    return btoa(
        navigator.userAgent +
        screen.width +
        screen.height +
        navigator.language
    );
}

// üîê GERADOR DE KEY
function gerarKey() {
    return "PX-" + Math.random().toString(36).substr(2,8).toUpperCase();
}

function gerar() {
    const senha = document.getElementById("senha").value;
    if (senha !== SENHA_ADMIN) {
        alert("Senha incorreta!");
        return;
    }

    const dias = parseInt(document.getElementById("dias").value);
    const agora = Date.now();
    const expira = dias === 9999 ? 9999999999999 : agora + dias*86400000;

    const keyData = {
        key: gerarKey(),
        device: deviceID(),
        expira: expira,
        secret: SECRET
    };

    // salva local (dispositivo autorizado)
    localStorage.setItem("PAULO_XT_KEY", JSON.stringify(keyData));

    document.getElementById("out").innerHTML =
        `<b>KEY:</b> ${keyData.key}<br>
         <b>Status:</b> AUTORIZADA<br>
         <b>Dispositivo:</b> BLOQUEADO<br>
         <b>Validade:</b> ${dias === 9999 ? "Permanente" : dias + " dias"}`;
}
</script>
</body>
